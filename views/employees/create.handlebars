<h1 class="title">Cadastro de <br>Funcionário</h1>
<form action="/create" method="POST" class="form">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" id="name" placeholder="Informe o nome completo do funcionário" required="requires">
    </div>
    <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" placeholder="Informe o email do funcionário" required="required">
    </div>

    <div class="form-control">
        <label for="birthDate">Data de aniversário</label>
        <input type="date" name="birthDate" id="birthDate" placeholder="Informe a data de aniversário do funcionári" required="required">
    </div>
    <div class="form-control">
        <label for="salary">Salário:</label>
        <input type="number" name="salary" placeholder="Informe o salário do funcionário" required="required" min="0" onkeydown="return FilterInput(event)" onpaste="handlePaste(event)">
    </div>
    <div class="form-control">
        <label for="department">Cargo:</label>        
        <select name="department" id="department" required="required">
                <option value="" disabled selected>selecione...</option>
                <option value="gerente">Gerente</option>
                <option value="analistaDeSistemas">Analista de Sistemas</option>
                <option value="desenvolvedor">Desenvolvedor</option>
                <option value="dba">DBA</option>
            </select>
    </div>
    
    <input type="submit" class="btn" value="Gravar" onclick="
        try {
            businessRules.validateName()
            businessRules.calculateAge(document.getElementById('birthDate'))
        } catch (error) {            
            alert(error.message)
            return false
        }
    ">
</form>